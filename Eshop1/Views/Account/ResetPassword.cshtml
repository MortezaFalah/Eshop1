@model ResetPasswordViewmodel

@{
    ViewData["Title"] = "بازیابی کلمه عبور";
}

<main class="page-content page-auth">
    <!-- start of auth-container -->
    <div class="auth-container">
        <div class="auth-title mb-3"> بازیابی کلمه عبور</div>
        <!-- start of auth-box -->
        <div class="auth-box ui-box">
            <!-- start of auth-form -->
            <form asp-action="ResetPassword" asp-controller="Account" method="post" class="auth-form">
                <!-- start of form-element -->
                <input asp-for="Mobile" type="hidden">
               
                <div class="form-element-row mb-5">
                    <input asp-for="Password" type="text" class="form-control" placeholder="کلمه عبور جدید">
                    <span asp-validation-for="Password"></span>
                </div>

                <div class="form-element-row mb-5">
                    <input asp-for="ConfirmPassword" type="text" class="form-control" placeholder=" تکرار کلمه عبور جدید">
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="form-element-row mb-5">
                    <input asp-for="ConfirmCode" type="number" class="form-control" placeholder="کد تایید">
                    <span asp-validation-for="ConfirmCode"></span>
                </div>
                <!-- end of form-element -->
                <!-- start of form-element -->
                <div class="form-element-row mb-3">
                    <button class="btn btn-primary" type="submit" asp-action="ResetPassword">ذخیره</button>
                </div>
                <!-- end of form-element -->
              
            </form>
            <!-- end of auth-form -->
        </div>
        <!-- end of auth-box -->
    </div>
    <!-- start of auth-container -->
</main>