@model ForgotPasswordViewModel


@{
    ViewData["Title"] = "فراموشی کلمه عبور";
}

<main class="page-content page-auth">
    <!-- start of auth-container -->
    <div class="auth-container">
        <div class="auth-title mb-3"> فراموشی کلمه عبور</div>
        <!-- start of auth-box -->
        <div class="auth-box ui-box">
            <!-- start of auth-form -->
            <form asp-action="ForgotPassword" method="post" class="auth-form">
                <!-- start of form-element -->
                <div class="form-element-row mb-5">
                    <input asp-for="Mobile" asp type="text" class="form-control" placeholder="شماره موبایل ">
                    <span asp-validation-for="Mobile"></span>
                </div>


                <!-- end of form-element -->
                <!-- start of form-element -->
                <div class="form-element-row mb-3">
                    <button type="submit" class="btn btn-primary">ارسال کد تایید</button>
                </div>
                <!-- end of form-element -->

            </form>
            <!-- end of auth-form -->
        </div>
        <!-- end of auth-box -->
    </div>
    <!-- start of auth-container -->
</main>