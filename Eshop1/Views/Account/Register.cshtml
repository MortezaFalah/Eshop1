
@model RegisterViewModel

@{
    ViewData["Title"] = "ثبت نام";
}

<main class="page-content page-auth">
    <!-- start of auth-container -->
    <div class="auth-container">
        <div class="auth-title mb-3"> ثبت نام</div>
        <!-- start of auth-box -->
        <div class="auth-box ui-box">
            <!-- start of auth-form -->
            <form asp-action="Register" method="post" class="auth-form">
                <!-- start of form-element -->
                <div class="form-element-row mb-5">
                    <input asp-for="Mobile" asp type="text" class="form-control" placeholder="شماره موبایل ">
                    <span asp-validation-for="Mobile"></span>
                </div>

                <div class="form-element-row mb-5">
                    <input asp-for="Password" type="text" class="form-control" placeholder="کلمه عبور">
                    <span asp-validation-for="Password"></span>
                </div>

                <div class="form-element-row mb-5">
                    <input asp-for="ConfirmPassword" type="text" class="form-control" placeholder="تکرار کلمه عبور">
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <!-- end of form-element -->
                <!-- start of form-element -->
                <div class="form-element-row mb-3">
                    <button class="btn btn-primary"  type="submit">ثبت نام</button>
                </div>
                <!-- end of form-element -->
              @*   <!-- start of form-element -->
                <div class="form-element-row">
                    <div>
                        با ورود و یا ثبت نام در سایت شما <a href="#" class="link">
                            شرایط و
