@model LoginViewModel

@{
    ViewData["Title"] = "ورود";
}

<main class="page-content page-auth">
    <!-- start of auth-container -->
    <div class="auth-container">
        <div class="auth-title mb-3"> ورود به حساب کاربری</div>
        <!-- start of auth-box -->
        <div class="auth-box ui-box">
            <!-- start of auth-form -->
            <form asp-action="Login" method="post" class="auth-form">
                <!-- start of form-element -->
                <div class="form-element-row mb-5">
                    <input asp-for="Mobile" asp type="text" class="form-control" placeholder="شماره موبایل ">
                    <span asp-validation-for="Mobile"></span>
                </div>

                <div class="form-element-row mb-5">
                    <input asp-for="Password" type="text" class="form-control" placeholder="کلمه عبور">
                    <span asp-validation-for="Password"></span>
                </div>

                <!-- end of form-element -->
                <!-- start of form-element -->
                <div class="form-element-row mb-3">
                    <button type="submit" class="btn btn-primary">ورود</button>
                </div>
                <!-- end of form-element -->
              
            </form>
            <!-- end of auth-form -->
        </div>
        <!-- end of auth-box -->
    </div>
    <!-- start of auth-container -->
</main>