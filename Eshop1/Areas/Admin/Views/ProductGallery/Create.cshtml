@using Domain.Eshop.ViewModels.Product.ProductGallery
@model CreateProductGalleryViewModel

@{
    ViewData["Title"] = "افزودن تصویر به محصول";
}

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <input type="hidden" asp-for="ProductId" />
    <div class="col-md-12">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <div class="card">
                <div class="header">
                    <h2>
                        <strong>افزودن عکس جدید</strong>
                    </h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="#" onclick="return false;" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li>
                                    <a href="#" onclick="return false;">اقدام</a>
                                </li>
                                <li>
                                    <a href="#" onclick="return false;">اقدامی دیگر</a>
                                </li>
                                <li>
                                    <a href="#" onclick="return false;">چیز دیگری اینجا</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="body">

                    <label for="email_address">نام</label>
                    <div class="form-group">
                        <div class="form-line">
                            <input type="text" id="email_address1" asp-for="Title" class="form-control" placeholder="عنوان عکس را وارد کنید">

                        </div>
                    </div>
        
                

                    <br>
                    <button asp-action="Create"  asp-controller="ProductGallery" type="submit" class="btn btn-primary m-t-15 waves-effect">افزودن عکس</button>

                </div>
            </div>
        </div>


        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5 card" style="position:absolute ;top:20px ; left:40px">

            <div class="row">
                <div class="contact-photo">
                    <img id="blah" src="/Admin/images/usrbig.jpg" class="img-responsive" alt="">
                </div>
            </div>
            <br />
            <div class="file-field input-field">
                <div class="btn">
                    <span>فایل</span>
                    <input type="file" id="imgInp" asp-for="FileImage" name="FileImage">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate"  type="text">
                </div>
            </div>


        </div>

    </div>

</form>

<div>
    <a asp-action="List">بازگشت به صفحه قبل</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>

        imgInp.onchange = evt => {
            const [file] = imgInp.files
            if (file) {
                blah.src = URL.createObjectURL(file)
            }
        }
    </script>
}
