@using Domain.Eshop.ViewModels.Common
@model PagingViewModel




<div class="dataTables_paginate paging_simple_numbers" id="tableExport_paginate">
    @if (Model.PageCount > 1)
    {
        <ul class="pagination">


            <li class="paginate_button page-item previous disabled" id="tableExport_paginate">
                <a onclick="filPageId('@(Model.Page-1)')" aria-controls="tableExport" data-dt-idx="0" tabindex="0" class="page-link">قبلی</a>
            </li>

            @for (int i = Model.StartPage; i <= Model.EndPage; i++)
            {

                <li class="paginate_button page-item active">
                    <a onclick="filPageId('@i')" aria-controls="tableExport" data-dt-idx="1" tabindex="0" class="page-link  @(i==Model.Page?"active":"")">@i</a>
                </li>
            }
            <li class="paginate_button page-item next" id="tableExport_paginate">
                <a onclick="filPageId('@(Model.Page+1)')" aria-controls="tableExport" data-dt-idx="4" tabindex="0" class="page-link">بعدی</a>
            </li>


        </ul>
    }
</div>

