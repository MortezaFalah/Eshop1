@using Domain.Eshop.Models.Enums.Wallet
@using Domain.Eshop.ViewModels.Wallet

@model AdminChargeWalletViewModel
@{
    ViewData["Title"] = "شارژ کیف پول کاربر";
}

<form method="post"
      asp-area="Admin"
      asp-controller="Wallet"
      asp-action="ChargeWalletAdmin"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-success="OnSuccessChargeWalletAdmin">
    <input type="hidden" asp-for="Userid" />
    <div class="col-md-12">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        <strong>شارژ کیف پول کاربر</strong>
                    </h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="#" onclick="return false;" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                            <ul class="dropdown-menu pull-right">

                        </li>
                    </ul>
                    </li>
                    </ul>
                </div>
                <div class="body">

                    <label for="email_address">مبلغ</label>
                    <div class="form-group">
                        <div class="form-line">
                            <input type="number" id="email_address1" asp-for="Price" class="form-control" placeholder="مبلغ را وارد کنید">

                        </div>
                    </div>


                    <label for="email_address">انتخاب دسته بندی</label>
                    <div class="form-group">

                        <select class="form-control" value="Id" style="font-size:15px" name="TypeId" asp-items="@Html.GetEnumSelectList<TransactionType>()">
                            <option disabled="" selected="">انتخاب دسته بندی</option>


                        </select>
                    </div>
                    <label for="email_address">هدف تراکنش</label>
                    <div class="form-group">

                        <select class="form-control" value="Id" style="font-size:15px" name="TypeId" asp-items="@Html.GetEnumSelectList<TransactionCase>()">
                            <option disabled="" selected="">انتخاب کنید </option>


                        </select>
                    </div>
                    <label for="email_address"> کد پیگیری</label>
                    <div class="form-group">
                        <div class="form-line">
                            <input type="number" id="email_address1" asp-for="RefId" class="form-control" placeholder="کد پیگیری را وارد کنید">

                        </div>
                    </div>
                    <label for="email_address">توضیح تراکنش (اختیاری(</label>
                    <div class="form-group">
                        <div class="form-line">
                            <input type="text" id="email_address1" asp-for="Description" class="form-control" placeholder="توضیح را وارد کنید">

                        </div>
                    </div>


                    <br>
                    <button type="submit" class="btn btn-primary m-t-15 waves-effect">ثبت تراکنش</button>

                </div>
            </div>
        </div>




    </div>

</form>