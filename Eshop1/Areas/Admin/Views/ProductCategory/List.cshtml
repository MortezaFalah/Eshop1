@using Domain.Eshop.ViewModels.ProductCategory
@model FilterProductCategoryViewModel


@{
    ViewData["Title"] = "گروه محصولات";
}


<div class="col-md-12">
    <h4>لیست گروه</h4>
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
        <p>
            <br />


            <a asp-action="Create" asp-controller="ProductCategory" asp-area="Admin" type="submit" class="btn btn-primary btn-lg m-l-15 waves-effect">
                افزودن گروه جدید

            </a>
            <br />
        </p>
    </div>
    <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5 card">
        <div class="input-field col s6">
            <form method="post" action="List" id="filter-search">
                <input type="hidden" asp-for="Page" id="Page" name="Page">
                <label for="input_text" class="">فیلتر با نام گروه</label>
                <input asp-for="Title" id="input_text" type="text" name="Title" data-length="10">

                <button type="submit" class="btn btn-primary m-t-15 waves-effect">اعمال فیلتر</button>
            </form>
        </div>
    </div>
</div>

<div class="row  col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="col-sm-12">


        <table class="table table-hover js-basic-example contact_list dataTable no-footer" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
            <thead>
                <tr role="row">

                    <th class="center sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 112.483px;" aria-label="نام: activate to sort column ascending"> عنوان گروه</th>
                    <th class="center sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 154.217px;" aria-label="تلفن: activate to sort column ascending">  تاریخ ایجاد گروه</th>

                    <th class="center sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 92.4333px;" aria-label="اقدامات: activate to sort column ascending">اقدامات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Entities)
                {
                    <tr role="row" class="odd">
                        <td class="center">
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>

                        <td class="center">

                            @item.CreateDate.ToShamsi()
                        </td>
                        <td class="center">
                            <button class="btn tblActnBtn" asp-action="Update" asp-controller="ProductCategory" asp-area="Admin" asp-route-id="@item.Id">
                                <i class="material-icons">mode_edit</i>

                            </button>
                            <button class="btn tblActnBtn" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="material-icons">delete</i>

                            </button>

                        </td>
                    </tr>
                }

            </tbody>
        </table>




       
    </div>
    <partial name="/Areas/Admin/Views/Shared/_AdminPaging.cshtml" model="@Model.GetCurrentPaging()" />

</div>

